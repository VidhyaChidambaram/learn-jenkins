job('create_job_dsl') {
    description('This job is generated by DSL')

    parameters {
        stringParam('USER_NAME', defaultValue='JENKINS_USER')
        booleanParam('SKIP_TESTS', defaultValue=false)
        choiceParam('ENV_TYPE', ['DEV', 'TEST', 'QA', 'PROD'])
    }

    scm {
        git {
            remote {
                github('VidhyaChidambaram/junit5', 'https')
                credentials('github_cred')
            }
        }
    }

    triggers {
        cron('H * 5 * *')
    }

    steps {
        shell("""
            echo 'Running shell inside Jenkins DSL'
            echo 'Triple quotes for multi-line'
            """)
    }

    publishers {
        mailer('me@example.com', true, true)
    }
}